<% include ../partials/header %>

<div class="container text-center">
	<div class="row">
		<div class = "col-md-4 m-auto">
		<h1>Edit Campground</h1>
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="Name" value="<%= campground.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="Image URL" value="<%= campground.image %>">
				</div>
				<div class="form-group">
					<textarea class="form-control form-description" type="text" name="description" placeholder="Description"><%= campground.description %></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
		</div>
	</div>
	<a href="/campgrounds">Back to campgrounds</a>
</div>

<% include ../partials/footer %>
